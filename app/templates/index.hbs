    <hr>

    {{#if save.addClicked}}
      {{category-create-form save=save mainCategory=true saveCategory='saveCategory'
      discardSaveCategory='discardSaveCategory'}}
      {{else}}
        <button class="btn btn-primary" {{action 'createMainCategory' save}}>Add Category</button>
    {{/if}}

    <hr>

    {{#link-to (query-params date=day) class="btn btn-primary btn-sm"}}today{{/link-to}}
    {{#link-to (query-params date=weekly) class="btn btn-primary btn-sm"}}last 7 days{{/link-to}}
    {{#link-to (query-params date=month) class="btn btn-primary btn-sm"}}last 30 days{{/link-to}}
    <label>
        Start date:
      {{pikaday-input onSelection=(action 'selectStartDay') format="YYYY-MM-DD"}}
    </label>
    <label>
        End date:
      {{pikaday-input minDate=minDate onSelection=(action 'selectEndDay') format="YYYY-MM-DD" disabled=isSetedstartDay}}
    </label>
    <hr>

    <div class="card-columns">
  {{rec-row row=model saveSub=saveSub discardSaveCategory='discardSaveCategory' deleteCategory='deleteCategory' deleteExpense='deleteExpense'
            expenseEdit='expenseEdit' saveCategory='saveCategory' isClickedAddMoney='isClickedAddMoney'
            cancelAddMoney='cancelAddMoney' saveMoney='saveMoney' isClickedUpdate='isClickedUpdate'
  saveExpense='saveExpense' cancelExpenseEdit='cancelExpenseEdit' isClickedSubCategory='isClickedSubCategory'}}
    </div>




