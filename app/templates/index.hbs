<hr>

{{#if save.addClicked}}
  {{category-create-form save=save mainCategory=true saveCategory='saveCategory'
                         discardSaveCategory='discardSaveCategory'}}
{{else}}
    <button class="btn btn-primary" {{action 'createMainCategory' save}}>Add Category</button>
{{/if}}

<hr>
<div class="filter">
    <div class="input-group">
        <div class="btn-group" role="group" aria-label="Basic example">

          {{#link-to (query-params date=day) class="btn btn-secondary"}}today{{/link-to}}
          {{#link-to (query-params date=weekly) class="btn btn-secondary"}}last 7 days{{/link-to}}
          {{#link-to (query-params date=month) class="btn btn-secondary"}}last 30 days{{/link-to}}
        </div>
      {{pikaday-input value=startDay onSelection=(action 'selectStartDay') format="YYYY-MM-DD" placeholder="start date"}}
      {{pikaday-input value=endDay minDate=minDate onSelection=(action 'selectEndDay') format="YYYY-MM-DD"
                      disabled=isSetedstartDay placeholder="end date"}}
        <button {{action 'showChart' model}} class="btn btn-secondary">
            {{#if isShowChartCliked}}
              Hide Charts
            {{else}}
                Show Charts
            {{/if}}

        </button>
    </div>
</div>
<hr>
<!-- start Charts -->

{{#if isShowChartCliked}}
  {{high-charts chartOptions=chartOptions content=series theme=theme}}
{{/if}}

<!-- end Charts Charts -->

<div class="card-columns">
  {{rec-row row=model saveSub=saveSub discardSaveCategory='discardSaveCategory' deleteCategory='deleteCategory'
            deleteExpense='deleteExpense'
            expenseEdit='expenseEdit' saveCategory='saveCategory' isClickedAddMoney='isClickedAddMoney'
            cancelAddMoney='cancelAddMoney' saveMoney='saveMoney' isClickedUpdate='isClickedUpdate'
            saveExpense='saveExpense' cancelExpenseEdit='cancelExpenseEdit'
            isClickedSubCategory='isClickedSubCategory'}}
</div>




