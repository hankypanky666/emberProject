{{#each row as |category|}}
    {{#if category.hasDirtyAttributes}}
    {{else}}
        <div class="card card-outline-success">
            <div class="card-header">
                <h5 class="card-title" data-toggle="collapse" data-target="#{{category.id}}">{{fa-icon "folder"}} {{category
                .name}}<span
                        class="tag
            tag-danger tag-pill pull-xs-right">
                  {{category.selfExpensesAmountsSum}}
                </span></h5>
            </div>

            <!-- expenses -->
          {{list-expenses category=category deleteCategory='deleteCategory' deleteExpense='deleteExpense' expenseEdit='expenseEdit'
                          saveExpense='saveExpense'}}
            <!-- expenses end-->

            <!-- subCategories -->
            <ul class="list-group list-group-flush">
              {{#each category.children as |child|}}
                  <li class="list-group-item" data-toggle="collapse" data-target="#{{child.id}}">
                    {{child.name}}
                      <span class="tag tag-danger tag-pill pull-xs-right">
                        {{category.subCategoriesAmountsSum}}
                      </span>
                  </li>
                {{list-expenses category=child deleteCategory='deleteCategory' deleteExpense='deleteExpense' expenseEdit='expenseEdit'
                                saveExpense='saveExpense' cancelExpenseEdit='cancelExpenseEdit'}}
              {{/each}}
            </ul>
            <!-- subCategories end-->

            <div class="card-footer text-sm-center">
              {{#if children}}
              {{else}}
                  <h6 style="margin-bottom: 0">Total money: {{category.amount}}</h6>
              {{/if}}
            </div>
        </div>
    {{/if}}


{{/each}}
